# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:3000

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telemedicine
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
EMAIL_FROM=noreply@telemedicine.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=telemedicine-uploads

# Video Service Configuration
VIDEO_SERVICE_API_KEY=your_video_service_api_key
VIDEO_SERVICE_SECRET=your_video_service_secret

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Redis (for session storage and caching)
REDIS_URL=redis://localhost:6379

# Monitoring
SENTRY_DSN=your_sentry_dsn_here

# HIPAA Compliance
ENCRYPTION_KEY=your_encryption_key_here
DATA_RETENTION_DAYS=2555

# Development
DEBUG=true
CORS_ORIGIN=http://localhost:3000

# Next.js
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# PostgreSQL
DATABASE_URL=postgresql://postgres:password@localhost:5432/telemedicine?schema=public

# (Optional) Email provider for NextAuth
EMAIL_SERVER=smtp://user:pass@smtp.mail.com:587
EMAIL_FROM=telemedicine@example.com 